
<h1>Listing User with Id <%=@current_user.id %></h1>
<% if flash[:notice] %>
  <div style="background: yellow">
    <%= flash[:notice] %>
  </div>
<% end %>
<ul class="list-group" >
  <li>
    ID:
    <strong><%= @current_user.id %></strong>
  </li>
	<li>
		Nombre:
		<strong><%= @current_user.name %></strong>
	</li>
	<li>
		Correo:
		<strong><%= @current_user.email %></strong>
	</li>
  <li>
		Ciudad:
		<strong><%= @current_user.ciudad %></strong>
	</li>
  <li>
		Pais:
		<strong><%= @current_user.pais %></strong>
	</li>

  <li>
    Recibir Correos:
    <strong><%= @current_user.receive_email %></strong>
  </li>
</ul>


<p> <%= link_to "Edit", edit_profile_path, class:"btn btn-default btn-lg" %> </p>
<p> <%= link_to "Edit Password", password_profile_path, class:"btn btn-default btn-lg" %> </p>
