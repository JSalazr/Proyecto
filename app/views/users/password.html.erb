<h1 style="font-size: 30px; font-family: Anton, sans-serif; color: #64A300" >Edit User</h1>
<p> <em> Ingrese los datos necesarios: </em> </p>

<% if @user.errors.any? %>
  <div>
    Por favor corrija los siguientes problemas:
    <ul>
      <% @user.errors.full_messages.each do |m| %>
        <li>
          <%= m %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<div style="width:500px">
  <%= form_for @user do |f| %>
    <p>
      <%= f.label :password, "Nueva Contrasena", class: "input-group"  %>
      <%= f.password_field :password, class: "form-control" %>
    </p>

    <p>
      <%= f.label :password_confirmation, "Ingrese la contrasena de nuevo", class: "input-group"  %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </p>

    <p>
      <%= f.submit "Update", class:"btn btn-default btn-lg" %>
      <%= link_to "Cancelar", profile_path, class:"btn btn-default btn-lg" %>
    </p>

  <% end %>
</div>
