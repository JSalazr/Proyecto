<h1 style="font-size: 30px; font-family: Anton, sans-serif; color: #64A300" >List of Campaigns</h1>

<% if flash[:notice] %>
	<div>
		<%= flash[:notice] %>
	</div>
<% end %>

<table class="table table-hover" style="width:1000px">
	<thead style="font-size: 18px; font-family: Fjalla One, sans-serif; color: #00263D">
		<tr>
			<th>Titulo</th>
			<th>Rese√±a</th>
			<th>Categoria</th>
			<th>Meta</th>
			<th>Monto Donado</th>
			<th>Creado En</th>
			<th>Usuario Creador</th>
		</tr>
	</thead>
	<tbody>
		<%- @campaigns.each do |f| %>
			<tr>
				<td><%= link_to f.titulo, campaign_path(f) %></td>
				<td><%= f.resena %></td>
				<td><%= link_to f.category, category_path(f.category) %></td>
				<td><%= f.meta %></td>
				<td>Lps. <%= cant_recuadada(f.donations) %></td>
				<td><%= format_date(f.created_at) %></td>
				<td><%= User.find(f.user_id).name %></td>
			</tr>
		<%- end %>
	</tbody>
</table>
