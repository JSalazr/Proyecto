<% if donations.any? %>
	<div>
		<h2 style= "font-family: Fjalla One, sans-serif; font-size: 25px">Donations: </h2>
		<table class="table table-hover" style="width:500px">
			<thead>
				<th>Autor</th>
				<th>Monto Hecho</th>
        <th>Mensaje</th>
        <th>Fecha Creado</th>
        <th>

        </th>
			</thead>
			<tbody>
				<%= render donations %>
			</tbody>
		</table>
	</div>
<% else %>
	<p><em>No hay donations.</em></p>
<% end %>
